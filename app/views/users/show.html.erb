<%= render './nav' %>
<% if session[:user_id] %>
    <% @this_user = User.find(session[:user_id]) %>

        <% if @this_user.locations.empty? %>
          <div class='unavailable'>
            <h2> Looks like you haven't visited any locations yet...</h2>
          </div>
        <% else %>
          <div class="all-content">
              <div class="sidebar">
              <ul class="list">
                  <% @this_user.locations.each do |location| %>
                      <li class="list-item background" planet-id="<%=location.system.id%>"><%= location.name %></li>
                  <% end %>
              </ul>
              </div>

              <div class="main-content">
                  <div class="planet-info">
                    <div id="achievements">
                      <h2 class='achievements'>Exo System Achievements</h2>
                    </div>
                  </div>
              </div>
          </div>
        <% end %>

<% else %>
  <div class='unavailable'>
    <h2> Please sign in to see the locations that you've visited.</h2>
  </div>
<% end %>

